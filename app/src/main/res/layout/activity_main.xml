<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.davidmackessy.tictactoe.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_one_player"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardElevation="8dp"
        android:layout_marginBottom="3dp">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="@string/str_1_player"
            android:textSize="48dp"
            android:gravity="center"
            android:id="@+id/txt_one_player"
            />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_two_player"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardElevation="8dp">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="@string/str_2_player"
            android:textSize="48dp"
            android:gravity="center"
            android:id="@+id/txt_two_player"
        />
    </android.support.v7.widget.CardView>

</LinearLayout>
